<div class="row">
  <div class="col-xs-6 col-xs-offset-2">
    <h1>Sign Up!</h1>
    <form action="<%= user_url(@user) %>" method="post">
      <input type=hidden name="_method" value="patch">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      
      <div class="form-group" for="username">
        <label>
          Username
        </label>

        <input type="text" name="user[username]" value="<%= @user.username %>" class="form-control" id="username">
      </div>
  
      <div class="form-group">
        <label class="form-group">
          Password
        </label>
          
        <input type="password" name="user[password]" value="" class="form-control">
        </label>
      </div>
      
      <button type="submit" value="" class="btn btn-primary">Sign Up</button>
    </form>
  </div><!-- /col-xs-4 -->
</div><!-- /row -->